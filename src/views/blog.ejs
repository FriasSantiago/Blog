<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="shortcut icon" href="./assets/logos/favicon.ico" type="image/x-icon">

    <link rel="stylesheet" href="assets/css/blog.css">
    <link rel="stylesheet" href="assets/css/navbar.css">
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <title>MyBlog</title>

</head>
<body>
    
    <%- include('partials/navbar.ejs') %>
    <!-- Main blog section -->
    <div class="main-container container-fluid">
        <div class="row justify-content-center">
            <div id="blog-content" class="col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8 main-blog">
                <!-- Posts form -->
                <% if (req.user) {%>
                <div class="container-fluid">
                    <div class="row justify-content-center">
                        <form class="col-10 post-form" id="post-form" action="/post" method="POST">
                            <div class="form-group">
                                <p class="post-title">Make A Post</p>
            
                                <textarea class="post-content" rows="4" name="postData"></textarea>
                                <small class="condition form-text text-muted">
                                    Posts must be 10-400 characters long.
                                </small>
                                <input class="btn btn-post" type="submit" value="POST">

                            </div>
                        </form>
                    </div>
                </div>
                <% } %>
                <!-- Posts form -->
                
                <!-- Display posts -->
                <div class="msg-cont">
                    <h2 class="posts-msg">Posts (<span class="posts-count">0</span>)</h2>
                    <hr>
                </div>
                <div class="container-fluid">
                    <div class="row justify-content-center posts-area">
                        
                    </div>
                    <button class="show-more btn btn-dark">Show More â–¼</button>
                </div>
                <!-- Display posts -->
            </div>
        </div>
    </div>

        <!-- Main blog section  -->


    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="./assets/js/blogjs.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
